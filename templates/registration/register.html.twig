<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}S'inscrire{% endblock %}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/inscription.css') }}">
    
</head>
<body>
 <header>
        <div class="container">
            <div class="row align-items-center"> <!-- Aligner le contenu au centre verticalement -->
                <div class="col-md-6 logo"> <!-- Utiliser une colonne Bootstrap -->
                   <img src="{{ asset('images/logo_joie_epice.png') }}" alt="Logo">
                </div>
                <div class="col-md-6 text-right"> <!-- Utiliser une colonne Bootstrap et aligner à droite -->
                    <nav>
                        <a href="#" class="text ml-3"><i class="fas fa-shopping-bag"></i></a>
                        <a href="{{ path('login') }}" class="text ml-3"><i class="fas fa-user"></i></a>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    {% block body %}

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-container">
                        <h1 class="text-center">S'inscrire</h1>

                        {{ form_errors(registrationForm) }}

                        {{ form_start(registrationForm) }}
                        
                            <div class="form-group">
                                {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        
                            <div class="form-group">
                                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(registrationForm.confirmPassword, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <button type="submit" class="btn btn-primary">Créer un compte</button>
                            <p class="mt-3">
                               <a href="{{ path('app_login') }}">Se Connecter</a>
                            </p>
                        {{ form_end(registrationForm) }}

                      
                    </div>
                </div>
            </div>
        </div>
        

    {% endblock %}


   <footer class="bg-dark text-white p-3 text-center mt-4">
        &copy; 2024 JOIE-EPICE. Tous droits réservés.
    </footer>

    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
